{
  "name": "goetas-webservices/xsd2php",
  "description": "Convert XSD  (XML Schema) definitions into PHP classes and JMS metadata",
  "type": "library",
  "authors": [
    {
      "name": "Asmir Mustafic"
    }
  ],
  "keywords": [
    "converter",
    "xml",
    "xsd",
    "php",
    "jms",
    "serializer"
  ],
  "license": "MIT",
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "tests": [
      "php ./vendor/phpunit/phpunit/phpunit -v",
      "phpstan analyse -l7 ./src ./tests ./bin/xsd2php",
      "psalm",
      "phpcpd ./src/ ./tests/ ./bin/xsd2php",
      "php ./vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --verbose --dry-run"
    ]
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/SignpostMarv/xsd-php-cs-fixer-config.git"
    }
  ],
  "require": {
    "php": "^5.5|^7.0",
    "doctrine/inflector": "^1.0",
    "goetas-webservices/soap-reader": "^0.3",
    "goetas-webservices/xsd-reader": "^0.2",
    "psr/log": "^1.0",
    "symfony/config": "^2.2|^3.0",
    "symfony/console": "^2.7|^3.0",
    "symfony/dependency-injection": "^2.2|^3.0",
    "symfony/yaml": "^2.1|^3.0",
    "zendframework/zend-code": "~2.3"
  },
  "require-dev": {
    "goetas-webservices/xsd-php-cs-fixer-config": "^0.1.1",
    "goetas-webservices/xsd2php-runtime": "^0.2.7",
    "jms/serializer": "^1.3",
    "phpunit/phpunit": "^4.8|^5.0"
  },
  "autoload": {
    "psr-4": {
      "GoetasWebservices\\Xsd\\XsdToPhp\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GoetasWebservices\\Xsd\\XsdToPhp\\Tests\\": "tests/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.2-dev"
    }
  },
  "bin": [
    "bin/xsd2php"
  ]
}
